<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="350dp"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_centerHorizontal="true"
    android:orientation="vertical">

    <TextView
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:paddingLeft="10dp"
        android:text="Create Task"
        android:id="@+id/add_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/name_input"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="match_parent"
        android:drawablePadding="10dp"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_event_note_black_24dp"
        android:hint="Title"
        android:padding="10dp" />

    <LinearLayout
        android:id="@+id/reoccuring_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkbox"
            android:layout_marginLeft="5dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:padding="10dp"
            android:paddingLeft="5dp"
            style="@style/MediumText"
            android:id="@+id/text_save_reoccuring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_this_as_a_reoccuring_task" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <Button
            android:id="@+id/choose_existing"
            android:layout_weight="1"
            android:text="My Tasks"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:text="@string/create"
            android:layout_height="match_parent" />
    </LinearLayout>




</LinearLayout>